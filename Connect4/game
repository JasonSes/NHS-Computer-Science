<script>
var turn="red";
function toggle(){
   if (turn == 'red') {
      turn = 'yellow'; 
   } 
   else {
      turn = 'red'; 
   }
}
function column1() { 
  if(document.getElementById("b36").style.backgroundColor=="white"){
	document.getElementById("b36").style.backgroundColor = turn;
    toggle(); 
  }
  else if (document.getElementById("b29").style.backgroundColor=="white"){
	document.getElementById("b29").style.backgroundColor = turn;
    toggle();
  }
else if (document.getElementById("b22").style.backgroundColor=="white"){
	document.getElementById("b22").style.backgroundColor = turn;
    toggle();
  }
else if (document.getElementById("b15").style.backgroundColor=="white"){
	document.getElementById("b15").style.backgroundColor = turn;
    toggle();
  }
else if (document.getElementById("b8").style.backgroundColor=="white"){
	document.getElementById("b8").style.backgroundColor = turn;
    toggle();
  }
else if (document.getElementById("b1").style.backgroundColor=="white"){
	document.getElementById("b1").style.backgroundColor = turn;
    toggle();
  }
}
</script>
